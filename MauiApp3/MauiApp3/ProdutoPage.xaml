<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp3.ProdutoPage"
             BindingContext="{x:Reference Produto}"
             Title="ProdutoPage">
    <VerticalStackLayout>
        <Button
            Text="Voltar"
            x:Name="btnVoltar"
            Clicked="btnVoltar_Clicked"
            />
        <Grid>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Label 
                Text="Nome"
                Grid.Row="0"
                FontSize="Medium"
                Padding="15"/>

            <Label Text="{Binding Nome}" 
               Grid.Row="0"
               Grid.Column="1"
               FontSize="Large"
               Padding="15"/>

            <Label 
                Text="PreÃ§o"
                Grid.Row="1"
                FontSize="Medium"
                Padding="15"/>

            <Label 
                Text="{Binding Preco}"
                Grid.Row="1"
                Grid.Column="1"
                FontSize="Large"
                Padding="15"/>

            <Label 
                Grid.Row="2"
                Text="Categoria"
                FontSize="Medium"
                Padding="15"/>

            <Label 
                Grid.Column="1"
                Grid.Row="2"
                Text="{Binding Categoria}"
                FontSize="Large"
                Padding="15"/>
        </Grid>

    </VerticalStackLayout>
</ContentPage>